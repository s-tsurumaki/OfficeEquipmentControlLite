@model OfficeEquipmentControl.Models.T_備品管理

@{
    ViewBag.Title = "OneEdit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.備品管理ID)
        @Html.HiddenFor(model => model.備品ID)
        @Html.HiddenFor(model => model.状態ID)
        @Html.HiddenFor(model => model.貸出返却日)
        @Html.HiddenFor(model => model.利用者名)
        @Html.HiddenFor(model => model.TS)
        @Html.HiddenFor(model => model.更新日)
        @Html.HiddenFor(model => model.更新者)


        @{
            string msg = @Html.DisplayFor(model => model.T_備品.品名).ToString() + "を" + @ViewBag.MsgStr + "ます";
            
            <h3>@msg</h3>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                    @ViewBag.BtnState
                </button>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">確認</h4>
                    </div>
                    <div class="modal-body">
                        登録します。宜しいですか？
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">戻ります。</button>
                        <button type="submit" class="btn btn-primary">はい、登録します。</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
